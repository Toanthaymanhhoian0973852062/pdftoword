{
  "name": "doculatex-converter",
  "private": true,
  "version": "1.0.0",
  "main": "electron/main.cjs",
  "author": "DocuLatex Team",
  "description": "Convert PDFs and Images into editable Markdown with LaTeX",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron": "electron .",
    "app": "concurrently -k \"npm run dev\" \"npm run electron\"",
    "dist": "vite build && electron-builder"
  },
  "dependencies": {
    "react-markdown": "^10.1.0",
    "lucide-react": "^0.556.0",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "@google/genai": "^1.31.0",
    "remark-math": "^6.0.0",
    "rehype-katex": "^7.0.1",
    "docx": "8.5.0",
    "pdfjs-dist": "4.0.379"
  },
  "devDependencies": {
    "@types/node": "^22.14.0",
    "@vitejs/plugin-react": "^5.0.0",
    "typescript": "~5.8.2",
    "vite": "^6.2.0",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.1",
    "concurrently": "^8.2.2"
  },
  "build": {
    "appId": "com.doculatex.app",
    "productName": "DocuLatex",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "win": {
      "target": "nsis"
    },
    "mac": {
      "target": "dmg"
    },
    "linux": {
      "target": "AppImage"
    }
  }
}